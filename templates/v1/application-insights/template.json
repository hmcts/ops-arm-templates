{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "aiName": {
            "type": "string"
        },
        "aiLocation": {
            "allowedValues": [
                "uksouth",
                "ukwest"
            ],
            "defaultValue": "UK South",
            "type": "string"
        },
        "aiAppName": {
            "type": "string",
            "defaultValue": ""
        },
        "cTag_ManagedBy": {
            "allowedValues": [
                "DevOps"
            ],
            "type": "string"
        },
        "cTag_SolutionOwner": {
            "allowedValues": [
                "DTS"
            ],
            "type": "string"
        },
        "cTag_ActivityName": {
            "allowedValues": [
                "Cloud Management"
            ],
            "type": "string"
        },
        "cTag_DataClassification": {
            "allowedValues": [
                "internal",
                "public",
                "secret"
            ],
            "type": "string"
        },
        "cTag_Automation": {
            "defaultValue": "{}",
            "type": "string"
        },
        "cTag_CostCentre": {
            "allowedValues": [
                "10245117"
            ],
            "type": "string"
        },
        "cTag_Environment": {
            "allowedValues": [
                "sandbox",
                "development",
                "testing",
                "ithc",
                "production",
                "staging",
                "demo",
                "management"
            ],
            "type": "string"
        },
        "cTag_Criticality": {
            "allowedValues": [
                "low",
                "medium",
                "high"
            ],
            "type": "string"
        }
    },
    "variables": {},
    "functions": [
        {
            "namespace": "hmcts",
            "members": {
                "getAiName": {
                    "parameters": [
                        {
                            "name": "originName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(endsWith(parameters('originName'), '-ai'), parameters('originName'), concat(parameters('originName'),'-ai'))]"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "apiVersion": "2015-05-01",
            "name": "[hmcts.getAiName(parameters('aiName'))]",
            "type": "microsoft.insights/components",
            "location": "[parameters('aiLocation')]",
            "tags": {
                "managedBy": "[parameters('cTag_ManagedBy')]",
                "solutionOwner": "[parameters('cTag_SolutionOwner')]",
                "activityName": "[parameters('cTag_ActivityName')]",
                "dataClassification": "[parameters('cTag_DataClassification')]",
                "automation": "[parameters('cTag_Automation')]",
                "costCentre": "[parameters('cTag_CostCentre')]",
                "environment": "[parameters('cTag_Environment')]",
                "criticality": "[parameters('cTag_Criticality')]"
            },
            "properties": {
                "ApplicationId": "[parameters('aiAppName')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        }
    ],
    "outputs": {}
}