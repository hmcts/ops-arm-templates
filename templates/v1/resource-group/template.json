{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "rgName": {
            "type": "string"
        },
        "rgLocation": {
            "allowedValues": [
                "uksouth",
                "ukwest"
            ],
            "defaultValue": "UK South",
            "type": "string"
        },
        "cTag_ManagedBy": {
            "allowedValues": [
                "DevOps"
            ],
            "type": "string"
        },
        "cTag_SolutionOwner": {
            "allowedValues": [
                "DTS"
            ],
            "type": "string"
        },
        "cTag_ActivityName": {
            "allowedValues": [
                "Cloud Management"
            ],
            "type": "string"
        },
        "cTag_DataClassification": {
            "allowedValues": [
                "internal",
                "public",
                "secret"
            ],
            "type": "string"
        },
        "cTag_Automation": {
            "defaultValue": "{}",
            "type": "string"
        },
        "cTag_CostCentre": {
            "allowedValues": [
                "10245117"
            ],
            "type": "string"
        },
        "cTag_Environment": {
            "allowedValues": [
                "sandbox",
                "development",
                "testing",
                "ithc",
                "production",
                "staging",
                "demo",
                "management"
            ],
            "type": "string"
        },
        "cTag_Criticality": {
            "allowedValues": [
                "low",
                "medium",
                "high"
            ],
            "type": "string"
        }
    },
    "variables": {},
    "functions": [
        {
            "namespace": "hmcts",
            "members": {
                "getRgName": {
                    "parameters": [
                        {
                            "name": "originName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(endsWith(parameters('originName'), '-rg'), parameters('originName'), concat(parameters('originName'),'-rg'))]"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('rgLocation')]",
            "name": "[hmcts.getRgName(parameters('rgName'))]",
            "properties": {},
            "tags": {
                "managedBy": "[parameters('cTag_ManagedBy')]",
                "solutionOwner": "[parameters('cTag_SolutionOwner')]",
                "activityName": "[parameters('cTag_ActivityName')]",
                "dataClassification": "[parameters('cTag_DataClassification')]",
                "automation": "[parameters('cTag_Automation')]",
                "costCentre": "[parameters('cTag_CostCentre')]",
                "environment": "[parameters('cTag_Environment')]",
                "criticality": "[parameters('cTag_Criticality')]"
            }
        }
    ],
    "outputs": {}
}