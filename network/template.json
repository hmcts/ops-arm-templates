                "rgTag_ActivityName": "parameters('rgTag_rgTag_ActivityName')]",
                "rgTag_Automation": "parameters('rgTag_Automation')]",
                "rgTag_CostCentre": "parameters('rgTag_CostCentre')]",
                "rgTag_DataClassification": "parameters('rgTag_DataClassification')]",
                "rgTag_ManagedBy": "parameters('rgTag_ManagedBy')]",
                "rgTag_SolutionOwner":"[parameters('rgTag_SolutionOwner')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "string"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": []
                },
                "subnets": [
                    {
                        "name": "mgmtSubnet",
                        "properties": {
                            "addressPrefix": "string",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgNameUksouth'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', parameters('rtNameUksouth'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-09-01",
            "name": "[parameters('vnNameUkwest')]",
            "location": "ukwest",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgNameUkwest'))]",
                "[resourceId('Microsoft.Network/routeTables', parameters('rtNameUkwest'))]"
            ],
            "tags": {
                "rgTag_ActivityName": "parameters('rgTag_rgTag_ActivityName')]",
                "rgTag_Automation": "parameters('rgTag_Automation')]",
                "rgTag_CostCentre": "parameters('rgTag_CostCentre')]",
                "rgTag_DataClassification": "parameters('rgTag_DataClassification')]",
                "rgTag_ManagedBy": "parameters('rgTag_ManagedBy')]",
                "rgTag_SolutionOwner":"[parameters('rgTag_SolutionOwner')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "string"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": []
                },
                "subnets": [
                    {
                        "name": "mgmtSubnet",
                        "properties": {
                            "addressPrefix": "string",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgNameUkwest'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', parameters('rtNameUkwest'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2019-09-01",
            "name": "[concat(parameters('vnNameUksouth'), '/mgmtSubnet')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnNameUksouth'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgNameUksouth'))]",
