{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "afName": {
            "type": "string"
        },
        "afLocation": {
            "allowedValues": [
                "uksouth",
                "ukwest"
            ],
            "defaultValue": "UK South",
            "type": "string"
        },
        "afResourceGroup": {
            "type": "string"
        },
        "afSubscriptionId": {
            "type": "string"
        },
        "afKind": {
            "allowedValues": [
                "functionapp"
            ],
            "type": "string"
        },
        "afAiName": {
            "type": "string",
            "defaultValue": ""
        },
        "afAiKey": {
            "type": "string",
            "defaultValue": ""
        },
        "afAspName": {
            "type": "string"
        },
        "afAspResourceGroup": {
            "defaultValue": "",
            "type": "string"
        },
        "afStorageAccountName": {
            "type": "string"
        },
        "afStorageAccountResourceGroup": {
            "defaultValue": "",
            "type": "string"
        },
        "afHostingEnvironment": {
            "allowedValues": [
                ""
            ],
            "defaultValue": "",
            "type": "string"
        },
        "afRuntime": {
            "allowedValues": [
                "powershell"
            ],
            "type": "string"
        },
        "afTag_ManagedBy": {
            "allowedValues": [
                "DevOps"
            ],
            "type": "string"
        },
        "afTag_SolutionOwner": {
            "allowedValues": [
                "DTS"
            ],
            "type": "string"
        },
        "afTag_ActivityName": {
            "allowedValues": [
                "Cloud Management"
            ],
            "type": "string"
        },
        "afTag_DataClassification": {
            "allowedValues": [
                "internal",
                "public",
                "secret"
            ],
            "type": "string"
        },
        "afTag_Automation": {
            "defaultValue": "{}",
            "type": "string"
        },
        "afTag_CostCentre": {
            "allowedValues": [
                "10245117"
            ],
            "type": "string"
        },
        "afTag_Environment": {
            "allowedValues": [
                "sandbox",
                "development",
                "testing",
                "ithc",
                "production",
                "staging",
                "demo",
                "management"
            ],
            "type": "string"
        },
        "afTag_Criticality": {
            "allowedValues": [
                "low",
                "medium",
                "high"
            ],
            "type": "string"
        }
    },
    "variables": {},
    "functions": [
        {
            "namespace": "hmcts",
            "members": {
                "getAfName": {
                    "parameters": [
                        {
                            "name": "originName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[if(endsWith(parameters('originName'), '-func'), parameters('originName'), concat(parameters('originName'),'-func'))]"
                    }
                }
            }
        }
    ],

    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[hmcts.getAfName(parameters('afName'))]",
            "type": "Microsoft.Web/sites",
            "kind": "[parameters('afKind')]",
            "location": "[parameters('afLocation')]",
            "tags": {
                "managedBy": "[parameters('afTag_ManagedBy')]",
                "solutionOwner": "[parameters('afTag_SolutionOwner')]",
                "activityName": "[parameters('afTag_ActivityName')]",
                "dataClafsification": "[parameters('afTag_DataClassification')]",
                "automation": "[parameters('afTag_Automation')]",
                "costCentre": "[parameters('afTag_CostCentre')]",
                "environment": "[parameters('afTag_Environment')]",
                "criticality": "[parameters('afTag_Criticality')]"
            },
            "properties": {
                "name": "[hmcts.getAfName(parameters('afName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "[parameters('afRuntime')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[if(empty(parameters('afAiKey')), reference(concat('microsoft.insights/components/', parameters('afAiName')), '2015-05-01').InstrumentationKey, parameters('afAiKey'))]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('afStorageAccountName'),';AccountKey=',listKeys(resourceId(parameters('afSubscriptionId'),if(equals(parameters('afStorageAccountResourceGroup'), ''), parameters('afResourceGroup'), parameters('afStorageAccountResourceGroup')),'Microsoft.Storage/storageAccounts', parameters('afStorageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('afStorageAccountName'),';AccountKey=',listKeys(resourceId(parameters('afSubscriptionId'),if(equals(parameters('afStorageAccountResourceGroup'), ''), parameters('afResourceGroup'), parameters('afStorageAccountResourceGroup')),'Microsoft.Storage/storageAccounts', parameters('afStorageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(hmcts.getAfName(parameters('afName'))), substring(parameters('afSubscriptionId'), 0, 3))]"
                        }
                    ]
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('afSubscriptionId'),'/resourcegroups/', if(equals(parameters('afAspResourceGroup'), ''), parameters('afResourceGroup'), parameters('afAspResourceGroup')), '/providers/Microsoft.Web/serverfarms/', parameters('afAspName'))]",
                "hostingEnvironment": "[parameters('afHostingEnvironment')]",
                "clientAffinityEnabled": true
            }
        }
    ],
    "outputs": {}
}